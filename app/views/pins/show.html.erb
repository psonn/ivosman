<% provide(:title, @pin.title) %>
<%= link_to 'Back', pins_path %>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
    	<div class="panel-heading">
            <h2><%= @pin.title %></h2>
      </div>
      <div class="panel-body">
        <div class="center"><p><%= image_tag @pin.image.url(:medium) %></p></div><br/>
        <p>Geplaatst door <strong><%= @pin.user.username if @pin.user %></strong> op <%= @pin.created_at.strftime("%d/%m/%Y") %> om <%= @pin.created_at.strftime("%H:%M") %></p>
        <div class="center"><p><%= (@pin.description).html_safe %></p></div>

        <% if current_user && @pin.user == current_user %>
         <%= link_to edit_pin_path(@pin) do %>
           <span class="glyphicon glyphicon-edit"></span>
             Edit
          <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>